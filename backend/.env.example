# LinkedIn Resume Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# AI PROVIDER CONFIGURATION
# ========================================
# Choose provider: "ollama" (local), "openrouter" (cloud), "openai" (cloud)
# If USE_LOCAL_ANALYSE=true, Ollama is used regardless of AI_PROVIDER
AI_PROVIDER=openrouter
USE_LOCAL_ANALYSE=false

# ========================================
# LOCAL PROVIDER - Ollama
# ========================================
# Used when AI_PROVIDER=ollama or USE_LOCAL_ANALYSE=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ========================================
# CLOUD PROVIDER - OpenRouter (Recommended)
# ========================================
# Used when AI_PROVIDER=openrouter
# Supports multiple models from various providers
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_MODEL=openai/gpt-4o-mini

# ========================================
# CLOUD PROVIDER - OpenAI (Direct)
# ========================================
# Used when AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ========================================
# RATE LIMITING & SECURITY
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=chrome-extension://*,http://localhost:*

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_ANALYSIS=true
ENABLE_FUZZY_MATCHING=true
ENABLE_DETAILED_LOGGING=false

# ========================================
# FILE PROCESSING
# ========================================
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=pdf,docx,txt

# ========================================
# DATABASE (Optional - for future features)
# ========================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/linkedin_analyzer

# ========================================
# ANALYTICS (Optional)
# ========================================
# ANALYTICS_ENABLED=false
# ANALYTICS_API_KEY=your-analytics-key